<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="64dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    android:layout_marginVertical="2dp"
    android:layout_marginHorizontal="4dp"
    android:background="?selectableItemBackgroundBorderless">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/transaction_category_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:contentPadding="4dp"
        tools:src="@tools:sample/avatars"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        />

    <TextView
        android:id="@+id/transaction_category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/transaction_category_image"
        app:layout_constraintEnd_toEndOf="@id/transaction_category_image"
        app:layout_constraintTop_toBottomOf="@id/transaction_category_image"
        android:textSize="8sp"
        android:layout_marginTop="8dp"
        tools:text="@tools:sample/cities"
        android:ellipsize="end"
        android:maxLines="2"
        android:background="@color/itemBackground"
        />

</androidx.constraintlayout.widget.ConstraintLayout>