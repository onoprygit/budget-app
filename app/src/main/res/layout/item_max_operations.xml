<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/maxAmountOperations_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ImageView
        android:id="@+id/maxAmountOperations_categoryImage"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_category_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical|start"
        />
    <TextView
        android:id="@+id/maxAmountOperations_categoryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/maxAmountOperations_categoryImage"
        app:layout_constraintBottom_toBottomOf="@id/maxAmountOperations_categoryImage"
        app:layout_constraintStart_toEndOf="@id/maxAmountOperations_categoryImage"
        app:layout_constraintEnd_toStartOf="@id/maxAmountOperations_categoryAmount"
        android:text="Category"
        android:textSize="20sp"
        android:layout_marginHorizontal="12dp"
        android:gravity="start"
        />
    <TextView
        android:id="@+id/maxAmountOperations_categoryAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/maxAmountOperations_categoryImage"
        app:layout_constraintBottom_toBottomOf="@id/maxAmountOperations_categoryImage"

        app:layout_constraintEnd_toEndOf="parent"
        android:text="-99999"
        android:textSize="20sp"
        android:layout_marginHorizontal="12dp"
        android:textColor="@color/red"
        android:gravity="center_vertical|end"
        />
</androidx.constraintlayout.widget.ConstraintLayout>