<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addingMoneyFragment"
    >
    <TextView
        android:id="@+id/add_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Добавить транзакцию:"
        android:textColor="#1EEA26"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="0dp"
        android:layout_height="96dp"
        app:layout_constraintTop_toBottomOf="@id/add_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Введите сумму транзакции"
        />

    <TextView
        android:id="@+id/category_choose_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_text"
        app:layout_constraintStart_toStartOf="@id/edit_text"
        app:layout_constraintEnd_toEndOf="@id/edit_text"
        android:layout_margin="@dimen/base_horizontal_offset"
        android:text="Выберите категорию:"
        android:textSize="24sp"
        />

    <Button
        android:id="@+id/button_select_category"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:text="Выберите категорию"
        app:layout_constraintTop_toBottomOf="@id/category_choose_title"
        app:layout_constraintStart_toStartOf="@id/category_choose_title"
        app:layout_constraintEnd_toEndOf="@id/category_choose_title"
        android:layout_marginTop="40dp"
        />

<!--    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_spinner_title"
        android:layout_margin="@dimen/base_horizontal_offset"
        tools:entries="@tools:sample/cities"

        />-->





    <Button
        android:id="@+id/add_button"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:text="Добавить"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_select_category"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/green"
        />



</androidx.constraintlayout.widget.ConstraintLayout>