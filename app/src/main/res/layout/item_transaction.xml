<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/yellow_delicate">

    <TextView
        android:id="@+id/amount_money"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/category_image"
        app:layout_constraintStart_toEndOf="@id/category_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/category_image"
        android:layout_marginStart="@dimen/base_horizontal_offset"
        android:layout_marginEnd="@dimen/base_horizontal_offset"
        tools:text="@tools:sample/us_zipcodes"
        android:textSize="20sp"
        android:gravity="center_vertical|end"
        android:textStyle="bold"
        android:textColor="@color/red"

        />

    <TextView
        android:id="@+id/category_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/category_image"
        app:layout_constraintBottom_toBottomOf="@id/category_image"
        app:layout_constraintStart_toEndOf="@id/category_image"
        app:layout_constraintEnd_toStartOf="@id/amount_money"
        tools:text="@tools:sample/cities"
        android:textSize="20sp"
        android:layout_marginStart="8dp"
        />

    <ImageView
        android:id="@+id/category_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars"
        android:layout_marginTop="6dp"
        android:layout_marginStart="@dimen/base_horizontal_offset"
        />

</androidx.constraintlayout.widget.ConstraintLayout>