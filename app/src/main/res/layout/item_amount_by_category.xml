<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/amountByCategory_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    >
        <com.google.android.material.imageview.ShapeableImageView
            app:contentPadding="6dp"
            android:id="@+id/amountByCategory_categoryImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:src="@tools:sample/avatars"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            tools:background="@color/teal_200"
            />
        <TextView
            android:id="@+id/amountByCategory_categoryName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/amountByCategory_categoryImage"
            app:layout_constraintBottom_toBottomOf="@id/amountByCategory_categoryImage"
            app:layout_constraintStart_toEndOf="@id/amountByCategory_categoryImage"
            app:layout_constraintEnd_toStartOf="@id/amountByCategory_categoryAmount"
            android:text="Category"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginHorizontal="12dp"
            android:gravity="start"
            />
        <TextView
            android:id="@+id/amountByCategory_categoryAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/amountByCategory_categoryImage"
            app:layout_constraintBottom_toBottomOf="@id/amountByCategory_categoryImage"

            app:layout_constraintEnd_toEndOf="parent"
            android:text="-99999"
            android:textSize="18sp"
            android:layout_marginHorizontal="12dp"
            android:textColor="@color/red"
            android:gravity="center_vertical|end"
            />
</androidx.constraintlayout.widget.ConstraintLayout>