    <TextView
        android:id="@+id/more_settings_template_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/more_setting_title"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        android:layout_marginTop="12dp"
        android:text="Изменить имя"
        android:textColor="@color/analytics_text"
        android:textSize="18sp"
        android:background="?android:editTextBackground"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"

        />

    <TextView
        android:id="@+id/more_settings_template_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/more_settings_template_1"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        android:text="Ваши счета"
        android:layout_marginTop="8dp"
        android:textColor="@color/analytics_text"
        android:textSize="18sp"
        android:background="?android:editTextBackground"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"

        />

    <TextView
        android:id="@+id/more_settings_template_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/more_settings_template_2"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        android:text="Категории"
        android:layout_marginTop="8dp"
        android:textColor="@color/analytics_text"
        android:textSize="18sp"
        android:background="?android:editTextBackground"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"

        />

    <TextView
        android:id="@+id/more_settings_template_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/more_settings_template_3"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        android:text="Завершенные цели"
        android:layout_marginTop="8dp"
        android:textColor="@color/analytics_text"
        android:textSize="18sp"
        android:background="?android:editTextBackground"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"

        />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Выход"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
